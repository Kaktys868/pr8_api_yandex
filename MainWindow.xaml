<Window x:Class="Api_Yandex_True.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Api_Yandex_True"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Button
            Content="Обновить данные"
            Width="208"
            Margin="0,10,10,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Click="UpdateWeather"/>
        <TextBox 
            x:Name="city"
            Width="150"
            Margin="0,10,175,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Center">            
        </TextBox>
        <Button 
            Click="Poisk"
            Content="Погода для города"
            Width="150"
            Margin="0,10,-175,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Center">
            
        </Button>
        <ComboBox x:Name="Days" SelectionChanged="SelectDay" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="10"/>
        <ScrollViewer Margin="10,37,10,10">
            <StackPanel x:Name="parent">
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
